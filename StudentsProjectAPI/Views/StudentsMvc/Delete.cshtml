@model StudentsProjectAPI.Models.Student

<h2 class="mb-4 text-center">Delete Student</h2>
<div class="card mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <p class="card-text">Are you sure you want to delete this student?</p>
        <p><b>ID:</b> @Model.Id</p>
        <p><b>Name:</b> @Model.Name</p>
        <p><b>Department:</b> @Model.Department?.Name</p>
        <form asp-action="Delete" method="post" class="d-flex justify-content-between mt-3">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/StudentsMvc/Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div> 