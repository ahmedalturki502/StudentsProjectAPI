@model IEnumerable<StudentsProjectAPI.Models.Student>

<h2 class="mb-4 text-center">قائمة الطلاب</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-end mb-3">
    <a href="/StudentsMvc/Create" class="btn btn-success">
        <i class="fas fa-plus"></i> إضافة طالب جديد
    </a>
</div>
<table class="table table-bordered table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>الرقم</th>
            <th>اسم الطالب</th>
            <th>القسم</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Department?.Name</td>
            <td>
                <a href="/StudentsMvc/Details/@student.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i> تفاصيل
                </a>
                <a href="/StudentsMvc/Edit/@student.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <a href="/StudentsMvc/Delete/@student.Id" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i> حذف
                </a>
            </td>
        </tr>
    }
    </tbody>
</table> 