@model StudentsProjectAPI.Models.DTO.RegisterDTO

@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">إنشاء حساب جديد</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                            <input asp-for="Email" class="form-control" placeholder="أدخل بريدك الإلكتروني" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">كلمة المرور</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="أدخل كلمة المرور" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                يجب أن تحتوي كلمة المرور على 6 أحرف على الأقل
                            </small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">إنشاء الحساب</button>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="mb-0">لديك حساب بالفعل؟</p>
                        <a asp-action="Login" class="btn btn-outline-success">تسجيل الدخول</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 